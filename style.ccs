/* --- General Styles --- */
body {
  margin: 0;
  font-family: 'Segoe UI', Arial, sans-serif;
  line-height: 1.6;
  background-color: #fdfdfd;
  color: #333;
}

header {
  display: flex;
  justify-content: space-between; /* logo à gauche, nav à droite */
  align-items: center;             /* aligne verticalement */
  padding: 15px 40px;
  background-color: #004080;
  color: #fff;
  position: sticky;
  top: 0;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.logo {
  font-size: 60px;
  font-weight: bold;
}

/* nav aligné à droite */
nav {
  display: flex;
  gap: 40px; /* espace entre onglets */
}

nav a {
  text-decoration: none;
  color: #fff;
  font-size: 20px;
  font-weight: 500;
}

nav a:hover {
  text-decoration: underline;
}

/* Main container */
.container {
  max-width: 900px;
  margin: 50px auto;
  padding: 20px;
}

/* Headings */
h1, h2, h3 {
  color: #004080;
}

/* Footer */
footer {
  text-align: center;
  padding: 20px;
  border-top: 1px solid #ddd;
  color: #666;
  font-size: 14px;
}
